<!DOCTYPE html>
<html>
  <head>
    <title>Opengym</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>

    <nav id="header" class="nav-top shadow">
      <div id="search">
        <input id="search-bar" type="text"  class="hidden" placeholder="search" name="search">
        <button class="hidden" id="go">GO</button>
        <button class="hidden" id="cancel" onClick="search()">X</button>
      </div>
      <div id="nav-top-logo">Open Gym</div>
      <div id="search-icon"><i onClick="search()" class="fa fa-search"></i></div>
    </nav>

    <div id="yield-container"> <%= yield %> </div>

     <%= render 'layouts/nav-box' %>

    <nav id="footer" class="nav-bottom shadow">
      <i class="far fa-envelope"></i>
      <div class="nav-bottom-logo">OG</div>
      <div id="bar-container" onClick="menuReveal()">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
      </div>
    </nav>
<script>
removeShadow();
</script>
  </body>
</html>
