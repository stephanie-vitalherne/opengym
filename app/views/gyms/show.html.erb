
<h1><%= @gym.name %></h1>

<%= @gym.cover_photo.attachment.nil? ? image_tag('def.png', class: 'gymphoto') : image_tag(@gym.cover_photo, class: 'gymphoto') %>
<p><%= @gym.description %></p>
<br>

<div class="mapouter"><div class="gmap_canvas"><iframe id="gmap_canvas" src="https://maps.google.com/maps?q=<%= @gym.location %>&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.pureblack.de"></a></div></div>



<%= link_to @gym.name + " events", gym_events_path(@gym)  %>
<% x = 0 %>
<ul>
<% @gym.events.each do |e| %>
<% if x < 3 %>
 <li><%= link_to e.name + " (" + e.participants.count.to_s + " players)", gym_event_path(e) %></li>
  <% x += 1 %>
<% end %>
<% end %>
</ul>
